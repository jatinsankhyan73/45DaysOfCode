
#include <stdio.h>

int main(void) {
	int t,n;
	scanf("%d",&t);
	while(t--){
	    scanf("%d",&n);
	    if(n==0 || n==1){
	        printf("0\n");
	    }
	    else if (n%7>=2 || n==2){
	        int a=(n/7)+1;
	        printf("%d\n",a);
	    }
	    else if(n%7<2){
	        int b=(n/7);
	        printf("%d\n",b);
	    }
	    
	    
	}
	
	return 0;
}
